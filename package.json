{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "yarn build:cli && yarn build:linter",
    "bootstrap": "lerna bootstrap",
    "start": "lerna exec --scope rc-ui-lib yarn start",
    "build": "lerna exec --scope rc-ui-lib yarn build",
    "build:cli": "lerna exec --scope @rc/cli yarn build",
    "build:linter": "lerna exec --scope @rc/linter yarn build",
    "build:site": "lerna exec --scope rc-ui-lib yarn build:site",
    "release:site": "lerna exec --scope rc-ui-lib yarn release:site",
    "changelog": "lerna-changelog",
    "clean": "lerna clean -y",
    "publish": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rancui/rc-ui-lib.git"
  },
  "devDependencies": {
    "@rc/linter": "^1.0.0",
    "eslint": "^7.32.0",
    "husky": "4",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0",
    "stylelint": "^13.13.1"
  },
  "lint-staged": {
    "./packages/rc-ui-lib/src/**/*.{ts,tsx,js,less}": "prettier --write",
    "./packages/rc-ui-lib/src/**/*.{ts,tsx,js}": "eslint --fix",
    "./packages/rc-ui-lib/src/**/*.{css,less}": "stylelint --fix"
  },
  "dependencies": {
    "@rc/cli": "^1.0.0"
  }
}
